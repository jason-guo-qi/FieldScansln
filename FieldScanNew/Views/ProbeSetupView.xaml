<UserControl x:Class="FieldScanNew.Views.ProbeSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:viewmodels="clr-namespace:FieldScanNew.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ProbeSetupViewModel}"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Margin="0,0,10,10">
                <TextBlock Text="探头校准文件" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Padding="5" Background="#F9F9F9">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="..." Command="{Binding LoadProbeCommand}" Width="30" Margin="5,0,0,0"/>
                        <TextBlock Text="{Binding LoadedFileName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    </DockPanel>
                </Border>
                <Button Content="清空数据" Command="{Binding ClearProbeCommand}" Margin="0,5,0,0" HorizontalAlignment="Right"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding ProbePoints}" AutoGenerateColumns="False" 
                      CanUserAddRows="False" IsReadOnly="True" Margin="0,0,10,0"
                      BorderBrush="#DDDDDD" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="频率" Binding="{Binding FrequencyText}" Width="*"/>
                    <DataGridTextColumn Header="因子 (dB)" Binding="{Binding CorrectionFactor}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <Grid Grid.Column="1">
            <Border BorderBrush="#CCCCCC" BorderThickness="1">
                <oxy:PlotView Model="{Binding ProbePlotModel}" Margin="5"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>